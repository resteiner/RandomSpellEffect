<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="75dp"
    android:background="@color/colorBlackInk"
    tools:context=".views.activities.MainActivity">

    <FrameLayout
        android:id="@+id/mCardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_image_blank_background"
        app:layout_constraintBottom_toTopOf="@id/iBorderBottomEdge"
        app:layout_constraintLeft_toRightOf="@id/iBorderLeftEdge"
        app:layout_constraintRight_toLeftOf="@id/iBorderRightEdge"
        app:layout_constraintTop_toBottomOf="@id/iBorderTopEdge">

        <TextView
            android:id="@+id/tMainCardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            android:text="Hello"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/normal_text_size" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/vYouTubeVideoView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            app:videoId=""
            app:autoPlay="false"
            app:showFullScreenButton="true"
            app:enableAutomaticInitialization="true"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/iBorderCornerBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/border_corner_bottom_left" />

    <ImageView
        android:id="@+id/iBorderBottomEdge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tile_top_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iBorderCornerBottomLeft"
        app:layout_constraintRight_toLeftOf="@id/iBorderCornerBottomRight" />

    <ImageView
        android:id="@+id/iBorderCornerBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/border_corner_bottom_right" />

    <ImageView
        android:id="@+id/iBorderLeftEdge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/border_tile_side_vertical"
        app:layout_constraintBottom_toTopOf="@id/iBorderCornerBottomLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iBorderCornerTopLeft" />

    <ImageView
        android:id="@+id/iBorderRightEdge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/border_tile_side_vertical"
        app:layout_constraintBottom_toTopOf="@id/iBorderCornerBottomRight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iBorderCornerTopRight" />

    <ImageView
        android:id="@+id/iBorderCornerTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/border_corner_top_left" />

    <ImageView
        android:id="@+id/iBorderTopEdge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tile_top_horizontal"
        app:layout_constraintLeft_toRightOf="@id/iBorderCornerTopLeft"
        app:layout_constraintRight_toLeftOf="@id/iBorderCornerTopRight"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iBorderCornerTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/border_corner_top_right" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mFloatingActionButtonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@android:drawable/stat_sys_phone_call_forward"/>

