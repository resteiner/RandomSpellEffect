<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackInk"
    tools:context=".views.activities.MainActivity">

    <FrameLayout
        android:id="@+id/mDebugInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/primary_margin_vertical"
        android:background="@color/colorGreenMoss"
        android:padding="@dimen/primary_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tDebugSystemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mMainCardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/mBottomMenuContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/fCenter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/card_image_blank_background"
                app:layout_constraintBottom_toTopOf="@+id/fBorderBottom"
                app:layout_constraintLeft_toRightOf="@id/fBorderLeft"
                app:layout_constraintRight_toLeftOf="@+id/fBorderRight"
                app:layout_constraintTop_toBottomOf="@+id/fBorderTop">

                <View
                    android:id="@+id/vColorLayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorGreenEmerald" />

                <View
                    android:id="@+id/vPatternLayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pattern_tile_spectrum_swirl" />

                <ImageView
                    android:id="@+id/iCardCenterImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"

                    android:src="@drawable/card_image_placeholder" />


                <TextView
                    android:id="@+id/mMainActivityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/primary_margin_horizontal"
                    android:layout_marginTop="@dimen/primary_margin_vertical"
                    android:layout_marginRight="@dimen/primary_margin_horizontal"
                    android:layout_marginBottom="30dp"
                    android:background="@color/colorWhiteSmoke"
                    android:padding="@dimen/primary_margin_horizontal"
                    android:text="@string/generic_error_message"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fBorderTop"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:background="@color/colorPrimary"
                app:layout_constraintLeft_toRightOf="@+id/iCornerTopLeft"
                app:layout_constraintRight_toLeftOf="@+id/iCornerTopRight"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tBorderTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_tile_top_horizontal"
                    android:text="" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iCornerTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/fBorderTop"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/border_corner_top_right" />

            <ImageView
                android:id="@+id/iCornerTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/fBorderTop"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/border_corner_top_left" />


            <FrameLayout
                android:id="@+id/fBorderLeft"
                android:layout_width="22dp"
                android:layout_height="0dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/iCornerBottomLeft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/fCenter"
                app:layout_constraintTop_toBottomOf="@+id/iCornerTopLeft">

                <TextView
                    android:id="@+id/tBorderLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_tile_side_vertical"
                    android:text="" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fBorderRight"
                android:layout_width="22dp"
                android:layout_height="0dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/iCornerBottomRight"
                app:layout_constraintLeft_toRightOf="@id/fCenter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iCornerTopLeft">

                <TextView
                    android:id="@+id/tBorderRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_tile_side_vertical"
                    android:text="" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fBorderBottom"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iCornerBottomLeft"
                app:layout_constraintRight_toLeftOf="@+id/iCornerBottomRight">

                <TextView
                    android:id="@+id/tBorderBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_tile_top_horizontal"
                    android:text="" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iCornerBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fBorderBottom"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/border_corner_bottom_right" />

            <ImageView
                android:id="@+id/iCornerBottomLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/fBorderBottom"
                app:srcCompat="@drawable/border_corner_bottom_left" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/mBottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/primary_margin_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/mMainCardContainer"
        app:layout_constraintRight_toRightOf="@+id/mMainCardContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mSettingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorBlueCadet"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/primary_margin_horizontal"
                android:paddingTop="@dimen/primary_margin_vertical"
                android:paddingRight="@dimen/primary_margin_horizontal"
                android:paddingBottom="@dimen/primary_margin_vertical">

                <ImageView
                    android:id="@+id/iSettingsButtonIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/fBorderBottom"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_preferences" />

                <TextView
                    android:id="@+id/tSettingsButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mGenerateNewSpellEffectButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPurpleAmethyst"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="New Spell Effect"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/mSpellInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/primary_margin_horizontal"
        android:layout_marginRight="@dimen/primary_margin_horizontal"
        android:layout_marginBottom="@dimen/primary_margin_vertical"
        android:background="@color/colorSpellInfoBG"
        android:padding="@dimen/primary_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/mMainCardContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
